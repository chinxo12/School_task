@model Class

<h1>Faculty Details</h1>

<div>
    <h4>FacultyName: @Model.ClassName</h4>
    <hr  />
    <dl class="row">
        <dt class="col-sm-2">
            ID
        </dt>
        <dd class="col-sm-10">
            @Model.ClassId
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Sức chứa
        </dt>
        <dd class="col-sm-10">
            @Model.Capacity
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Ngày thành lập
        </dt>
        <dd class="col-sm-10">
            @Model.CreatedDate
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            Tên Khoa
        </dt>
        <dd class="col-sm-10">
            @Model.Faculty.FacultyName
        </dd>
    </dl>
</div>

<div class="btn-group">
     <form asp-action="Edit" asp-route-id="@Model.ClassId" method="get">
                            <button type="submit" class="btn btn-warning">Edit</button>
      </form>
     <button type="button" class="btn btn-secondary"  onclick="location.href='@Url.Action("Index")'">Back to List</button>
</div>