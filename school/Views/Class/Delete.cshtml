@model Class

<h2>Xóa Lớp Học</h2>

<p>Bạn có chắc chắn muốn xóa lớp học @Model.ClassName?</p>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="ClassId" />

    <div class="form-group">
        <div class="col-md-10">
            <button type="submit" class="btn btn-primary" name="confirm" value="true">Xác nhận</button>
            <a class="btn btn-secondary" asp-action="Index">Hủy</a>
        </div>
    </div>
</form>
