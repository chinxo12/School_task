@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<school.Models.User>



<h2>Users</h2>

<div>
    <button type="button" class="btn btn-primary"  onclick="location.href='@Url.Action("Create")'">Create New Student</button>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
               Full Name
            </th>
            <th>
                Email
            </th>
            <th>
                Adress
            </th>
            <th>
                Birth Date
            </th>
            <th>
                Role
            </th>
            <th>
                IsDelete
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                 <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BirthDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role.RoleName)
                </td>
                <td>
                    @(item.IsDeleted == true?"Deleted":"Studying")
                </td>
                <td>
                     <div class="btn-group">
                            <form asp-action="Details" asp-route-id="@item.UserId" method="get">
                                <button type="submit" class="btn btn-primary">Details</button>
                            </form>
                            <form asp-action="Edit" asp-route-id="@item.UserId" method="get">
                                <button type="submit" class="btn btn-warning">Edit</button>
                            </form>
                            <form asp-action="Delete" asp-route-id="@item.UserId" method="get" >
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-center my-3">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @Html.PagedListPager(Model, page => Url.Action("Index",new {page=page}), new PagedListRenderOptions() { LiElementClasses = new string[] { "page-item" }, PageClasses = new string[] { "page-link" }, UlElementClasses = new string[] { "pagination" } })
        </ul>
    </nav>
</div>

