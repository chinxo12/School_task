@model school.Models.User

<div>
    <h4>School</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Id:
        </dt>
        <dd class="col-sm-10">
            @Model.UserId
        </dd>
        <dt class="col-sm-2">
            Tên Sinh Viên :
        </dt>
        <dd class="col-sm-10">
            @Model.FullName
        </dd>
        <dt class="col-sm-2">
           Địa chỉ:
        </dt>
        <dd class="col-sm-10">
            @Model.Address
        </dd>
        <dt class="col-sm-2">
            Tên đăng nhập
        </dt>
        <dd class="col-sm-10">
            @Model.Username
        </dd>
        <dt class="col-sm-2">
            Ngày Sinh
        </dt>
        <dd class="col-sm-10">
            @Model.BirthDate
        </dd>
        <dt class="col-sm-2">
          Tình trạng
        </dt>
        <dd class="col-sm-10">
            @(Model.IsDeleted==true?" Đã thôi học ": " Đang học ")
        </dd>
    </dl>
</div>
<div class="btn-group">
   <form asp-action="Edit" asp-route-id="@Model.UserId" method="get">
                            <button type="submit" class="btn btn-warning">Edit</button>
      </form>
     <button type="button" class="btn btn-secondary"  onclick="location.href='@Url.Action("Index")'">Back to List</button>
</div>