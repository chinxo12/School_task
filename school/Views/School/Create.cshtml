@model school.Models.School

<H1>Create School</H1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="SchoolName" class="control-label"></label>
        <input asp-for="SchoolName" class="form-control" required/>
        <span asp-validation-for="SchoolName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <input asp-for="Address" class="form-control" required />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Capacity" class="control-label"></label>
        <input type="number" asp-for="Capacity" class="form-control" required/>
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <div class="btn-group">
        <div class="form-group">
            <input type="submit" class="btn btn-primary" />
        </div>
        <div>
                  <button type="button" class="btn btn-secondary"  onclick="location.href='@Url.Action("Index")'">Back to List</button>
        </div>
    </div>   
</form>

