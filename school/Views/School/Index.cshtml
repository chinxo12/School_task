@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@model X.PagedList.IPagedList<school.Models.School>

<h1>SChool List</h1>

 
 <button type="button" class="btn btn-primary"  onclick="location.href='@Url.Action("Create")'">Create New</button>

<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Tên trường học</th>
            <th>Địa chỉ</th>
            <th>Sức chứa</th>
            <th>Thời gian thành lập</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.SchoolId</td>
            <td>@item.SchoolName</td>
            <td>@item.Address</td>
            <td>@item.Capacity</td>
            <td>@item.FoundedTime</td>
            <td>
                <div class="btn-group">
                        <form asp-action="Details" asp-route-id="@item.SchoolId" method="get">
                            <button type="submit" class="btn btn-primary">Details</button>
                        </form>
                        <form asp-action="Edit" asp-route-id="@item.SchoolId" method="get">
                            <button type="submit" class="btn btn-warning">Edit</button>
                        </form>
                        <form asp-action="Delete" asp-route-id="@item.SchoolId" method="get" >
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                </div>
            </td>
        </tr>
    }
    </tbody>
</table>

<div class="d-flex justify-content-center my-3">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            @Html.PagedListPager(Model, page => Url.Action("Index",new {page=page}), new PagedListRenderOptions() { LiElementClasses = new string[] { "page-item" }, PageClasses = new string[] { "page-link" }, UlElementClasses = new string[] { "pagination" } })
        </ul>
    </nav>
</div>



